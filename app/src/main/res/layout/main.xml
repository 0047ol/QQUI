<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center|top"
	android:background="#F0F2F8"
	android:orientation="vertical"
	android:id="@+id/mainLinearLayout">

	<include
		layout="@layout/title"/>

	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp">

	</FrameLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:gravity="top|center"
		android:orientation="vertical">

		<Button
			android:id="@+id/one"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15.5dp"
			android:background="@drawable/login_btn"
			android:text="OneButtonDialog"
			android:textSize="18sp"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:gravity="center"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"/>

		<Button
			android:id="@+id/two"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15.5dp"
			android:background="@drawable/login_btn"
			android:text="TwoButtonDialog"
			android:textSize="18sp"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:gravity="center"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"/>

		<Button
			android:id="@+id/view_dialog"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15.5dp"
			android:background="@drawable/login_btn"
			android:text="CustomLayoutView"
			android:textSize="18sp"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:gravity="center"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"/>

		<Button
			android:id="@+id/edit_dialog"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15.5dp"
			android:background="@drawable/login_btn"
			android:text="EditTextView"
			android:textSize="18sp"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:gravity="center"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"/>

		<Button
			android:id="@+id/qq_toast"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15.5dp"
			android:background="@drawable/login_btn"
			android:text="Toast Widget"
			android:textSize="18sp"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:gravity="center"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"/>
			
	<Button
			android:id="@+id/other"
			android:layout_width="fill_parent"
			android:layout_height="45dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="15.5dp"
			android:background="@drawable/login_btn"
			android:text="About UI..."
			android:textSize="18sp"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:gravity="center"
			style="?android:attr/borderlessButtonStyle"
			android:layout_marginBottom="12dp"/>
	</LinearLayout>

</LinearLayout>

