<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#00000000"
	android:gravity="bottom"
	android:orientation="vertical">

	<Button
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@drawable/photo_gallery_selector"
		android:text="More"
		android:textSize="16sp"
		style="?android:attr/borderlessButtonStyle"
		android:id="@+id/more_button1"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="0.3dip"
		android:background="#DAD9DB"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@drawable/photo_camera_selector"
		android:text="Other"
		android:textSize="16sp"
		style="?android:attr/borderlessButtonStyle"
		android:id="@+id/more_button2"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="8dip"
		android:background="#DAD9DB"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@drawable/photo_cancel_selector"
		android:text="Cancel"
		android:textSize="16sp"
		style="?android:attr/borderlessButtonStyle"
		android:id="@+id/more_cancel"/>

</LinearLayout>

