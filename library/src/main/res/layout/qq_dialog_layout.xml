<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/bg_dialog_confirm_day"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center">

	<View
		android:background="@drawable/bg_dialog_confirm_block_day"
		android:layout_width="match_parent"
		android:layout_height="4dp"/>

	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/title_container"
		android:paddingTop="15dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:textSize="19sp"
			android:textColor="#FF333333"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:id="@+id/custom_miui_dialog_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center|center_vertical|center_horizontal"
			android:paddingBottom="10dp"
			android:layout_marginTop="5dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<FrameLayout
			android:id="@+id/custom_miui_dialog_view"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"/>

		<EditText
			android:id="@+id/Edits"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textCursorDrawable="@drawable/color_cursor"
			android:background="@drawable/edit_text_bg"
			android:maxLines="3"
			android:layout_marginLeft="35dp"
			android:layout_marginRight="35dp"
			android:textColorHint="#5B5A5A"
			android:textSize="13sp"
			android:layout_marginTop="6dp"
			android:selectAllOnFocus="true"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/v2"
		android:orientation="horizontal"
		android:layout_alignTop="@+id/btn_ok"
		android:layout_marginTop="20dp">

		<View
			android:gravity="center"
			android:orientation="horizontal"
			android:id="@+id/v1"
			android:background="#F2DCDCDC"
			android:layout_width="match_parent"
			android:layout_height="0.3dp"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:id="@+id/custom_miui_dialog_button"
		android:layout_height="44dp">

		<Button
			android:textSize="17sp"
			android:textColor="#FF333333"
			android:gravity="center"
			android:id="@+id/neutral_button"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			style="?android:attr/borderlessButtonStyle"
			android:layout_weight="1"
			android:text="按钮1"/>

		<View
			android:gravity="center"
			android:orientation="horizontal"
			android:background="#F2DCDCDC"
			android:layout_width="0.2dp"
			android:id="@+id/neutral_view"
			android:layout_height="match_parent"/>

		<Button
			android:textSize="17sp"
			android:textColor="#FF333333"
			android:gravity="center"
			android:id="@+id/negative_button"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			style="?android:attr/borderlessButtonStyle"
			android:layout_weight="1"
			android:text="按钮2"/>

		<View
			android:gravity="center"
			android:orientation="horizontal"
			android:background="#F2DCDCDC"
			android:layout_width="0.2dp"
			android:id="@+id/positive_view"
			android:layout_height="match_parent"/>

		<Button
			android:textSize="17sp"
			android:textColor="#FF333333"
			android:gravity="center"
			android:id="@+id/positive_button"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			style="?android:attr/borderlessButtonStyle"
			android:layout_weight="1"
			android:text="按钮3"/>

	</LinearLayout>

</LinearLayout>

